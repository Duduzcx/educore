
{
  "entities": {
    "Teacher": {
      "title": "Teacher",
      "type": "object",
      "description": "Represents a teacher or coordinator in the system.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string" },
        "subjects": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "email"]
    },
    "Live": {
      "title": "Live",
      "type": "object",
      "description": "Represents a scheduled or active live streaming class.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "teacher_name": { "type": "string" },
        "teacher_id": { "type": "string" },
        "youtube_id": { "type": "string" },
        "youtube_url": { "type": "string" },
        "url": { "type": "string" },
        "start_time": { "type": "string", "format": "date-time" },
        "trail_id": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" }
      }
    },
    "ForumPost": {
      "title": "ForumPost",
      "type": "object",
      "description": "A message in a forum or live chat with interaction flags.",
      "properties": {
        "id": { "type": "string" },
        "forum_id": { "type": "string" },
        "author_id": { "type": "string" },
        "author_name": { "type": "string" },
        "content": { "type": "string" },
        "is_question": { "type": "boolean" },
        "is_answered": { "type": "boolean" },
        "created_at": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/teachers/{teacherId}": {
      "schema": "Teacher",
      "description": "Teacher profiles."
    },
    "/lives/{liveId}": {
      "schema": "Live",
      "description": "Live classes data."
    },
    "/forum_posts/{postId}": {
      "schema": "ForumPost",
      "description": "Chat messages and pedagogical questions."
    }
  }
}
