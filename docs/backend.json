
{
  "entities": {
    "Teacher": {
      "title": "Teacher",
      "type": "object",
      "description": "Represents a teacher or coordinator in the system.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string" },
        "subjects": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "email"]
    },
    "Live": {
      "title": "Live",
      "type": "object",
      "description": "Represents a scheduled or active live streaming class.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "teacher_name": { "type": "string" },
        "teacher_id": { "type": "string" },
        "youtube_id": { "type": "string" },
        "youtube_url": { "type": "string" },
        "start_time": { "type": "string", "format": "date-time" },
        "active": { "type": "boolean" },
        "created_at": { "type": "string", "format": "date-time" }
      }
    },
    "Notice": {
      "title": "Notice",
      "type": "object",
      "description": "Institutional announcements for the students.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "content": { "type": "string" },
        "author": { "type": "string" },
        "priority": { "type": "string", "enum": ["banner", "popup", "normal", "fullscreen"] },
        "read_by": { "type": "array", "items": { "type": "string" } },
        "created_at": { "type": "string", "format": "date-time" }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/teachers/{teacherId}": {
      "schema": "Teacher",
      "description": "Teacher profiles."
    },
    "/lives/{liveId}": {
      "schema": "Live",
      "description": "Live classes data."
    },
    "/notices/{noticeId}": {
      "schema": "Notice",
      "description": "Mural of notices."
    }
  }
}
