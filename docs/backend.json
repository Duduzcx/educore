
{
  "entities": {
    "Profile": {
      "title": "Profile",
      "type": "object",
      "description": "Dados de perfil do estudante.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string" },
        "profile_type": { "type": "string", "enum": ["etec", "uni", "teacher"] },
        "institution": { "type": "string" },
        "course": { "type": "string" },
        "is_financial_aid_eligible": { "type": "boolean" },
        "last_access": { "type": "string", "format": "date-time" },
        "last_financial_simulation": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "email"]
    },
    "Teacher": {
      "title": "Teacher",
      "type": "object",
      "description": "Dados do professor ou mentor.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string" },
        "subjects": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" }
      },
      "required": ["id", "name", "email"]
    },
    "LearningTrail": {
      "title": "LearningTrail",
      "type": "object",
      "description": "Trilha de aprendizado estruturada.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "category": { "type": "string" },
        "description": { "type": "string" },
        "status": { "type": "string", "enum": ["draft", "active"] },
        "teacher_id": { "type": "string" },
        "teacher_name": { "type": "string" },
        "image_url": { "type": "string" },
        "created_at": { "type": "string", "format": "date-time" }
      }
    },
    "LearningModule": {
      "title": "LearningModule",
      "type": "object",
      "description": "Capítulo dentro de uma trilha.",
      "properties": {
        "id": { "type": "string" },
        "trail_id": { "type": "string" },
        "title": { "type": "string" },
        "order_index": { "type": "number" }
      }
    },
    "LearningContent": {
      "title": "LearningContent",
      "type": "object",
      "description": "Aula individual (vídeo, texto ou quiz IA).",
      "properties": {
        "id": { "type": "string" },
        "module_id": { "type": "string" },
        "title": { "type": "string" },
        "type": { "type": "string", "enum": ["video", "pdf", "text", "quiz"] },
        "url": { "type": "string" },
        "description": { "type": "string", "description": "Texto da aula ou JSON do quiz." }
      }
    },
    "Live": {
      "title": "Live",
      "type": "object",
      "description": "Transmissão ao vivo agendada com data e hora.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "teacher_name": { "type": "string" },
        "teacher_id": { "type": "string" },
        "youtube_id": { "type": "string" },
        "start_time": { "type": "string", "format": "date-time" },
        "trail_id": { "type": "string" }
      }
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "/profiles/{uid}": { "schema": "Profile", "description": "Perfis de usuários." },
    "/teachers/{teacherId}": { "schema": "Teacher", "description": "Dados de mentores." },
    "/learning_trails/{trailId}": { "schema": "LearningTrail", "description": "Trilhas de estudo." },
    "/learning_modules/{modId}": { "schema": "LearningModule", "description": "Capítulos das trilhas." },
    "/learning_contents/{contentId}": { "schema": "LearningContent", "description": "Aulas e Quizzes." },
    "/lives/{liveId}": { "schema": "Live", "description": "Eventos ao vivo agendados." }
  }
}
