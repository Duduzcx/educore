{
  "entities": {
    "Profile": {
      "title": "Profile",
      "type": "object",
      "description": "Dados de perfil do estudante.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string" },
        "profile_type": { "type": "string", "enum": ["etec", "uni"] },
        "institution": { "type": "string" },
        "course": { "type": "string" },
        "is_financial_aid_eligible": { "type": "boolean" },
        "last_access": { "type": "string", "format": "date-time" },
        "last_financial_simulation": { "type": "string", "format": "date-time" },
        "interests": { "type": "string" }
      }
    },
    "Teacher": {
      "title": "Teacher",
      "type": "object",
      "description": "Dados do professor ou mentor.",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string" },
        "subjects": { "type": "string" },
        "experience": { "type": "string" },
        "interests": { "type": "string" }
      }
    },
    "Live": {
      "title": "Live",
      "type": "object",
      "description": "Transmissão ao vivo agendada com data e hora obrigatórias.",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "description": { "type": "string" },
        "teacher_name": { "type": "string" },
        "youtube_id": { "type": "string" },
        "start_time": { "type": "string", "format": "date-time", "description": "Momento exato do início da aula." },
        "status": { "type": "string", "enum": ["scheduled", "live", "finished"] }
      }
    },
    "LearningContent": {
      "title": "LearningContent",
      "type": "object",
      "description": "Aula ou Quiz IA. No caso de quiz, o campo description armazena o JSON das questões.",
      "properties": {
        "id": { "type": "string" },
        "module_id": { "type": "string" },
        "title": { "type": "string" },
        "type": { "type": "string", "enum": ["video", "pdf", "text", "quiz"] },
        "url": { "type": "string" },
        "description": { "type": "string" }
      }
    }
  }
}
