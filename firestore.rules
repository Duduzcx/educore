rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // MODO DESENVOLVIMENTO TOTAL (ACESSO LIBERADO PARA TESTES)
    // Versão: 1.5.0 (Force Refresh - Reset de Segurança)
    // Data: 2024-05-20
    
    match /{document=**} {
      allow read, write: if true;
    }

    // Regra redundante para garantir que listagens globais funcionem
    match /lives/{liveId} {
      allow read, write, list: if true;
    }
    
    match /notices/{noticeId} {
      allow read, write, list: if true;
    }
  }
}