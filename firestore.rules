rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // MODO DESENVOLVIMENTO TOTAL (ACESSO LIBERADO PARA TESTES)
    // Versão: 1.6.0 (Reset de Autenticação & Recuperação de Login)
    // Data: 2024-05-20
    
    match /{document=**} {
      allow read, write: if true;
    }

    // Regras explícitas para garantir que o login e criação de perfil funcionem
    match /users/{userId} {
      allow read, write: if true;
    }
    
    match /teachers/{teacherId} {
      allow read, write: if true;
    }
    
    match /lives/{liveId} {
      allow read, write, list: if true;
    }
  }
}